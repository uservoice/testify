{
  "name": "@uservoice/testify",
  "version": "0.5.8",
  "description": "Easily test browser-ish Typescript projects with mocha",
  "main": "./src/testify.js",
  "types": "./types/testify",
  "bin": {
    "testify": "./src/testify.js"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push && git push --tags && npm publish",
    "test": "node src/testify.js",
    "pretty": "prettier --write \"src/**/*.js?(x)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uservoice/testify.git"
  },
  "keywords": [
    "mocha",
    "chai",
    "typescript",
    "sinon",
    "jsdom",
    "glob"
  ],
  "author": "Casey Corcoran <github@uservoice.com> (http://uservoice.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uservoice/testify/issues"
  },
  "homepage": "https://github.com/uservoice/testify#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "testify": {
    "files": "src/*.spec.ts",
    "src": "src/*.ts",
    "alias": {
      "@": "src"
    },
    "require": [
      "src/required.ts"
    ]
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-dom": "^0.0.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/sinon": "^7.0.11",
    "@types/sinon-chai": "^3.2.2",
    "cache-require-paths": "^0.3.0",
    "canvas": "^2.4.1",
    "chai": "^4.2.0",
    "chai-dom": "^1.8.1",
    "chokidar": "^2.1.5",
    "cosmiconfig": "^5.2.0",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "lodash": "^4.17.21",
    "log-process-errors": "^3.4.2",
    "minimatch": "^3.0.4",
    "mocha": "^6.0.2",
    "ora": "^3.3.1",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.11",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  }
}
